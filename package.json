{
  "name": "gokaygurcan.github.io",
  "version": "0.1.0",
  "description": "Personal website",
  "homepage": "https://www.gokaygurcan.com/",
  "scripts": {
    "start": "babel-node src/server",
    "dev:start": "nodemon -e js,jsx --ignore dist --exec babel-node src/server",
    "dev:wds": "webpack-dev-server --progress --colors",
    "prod:build": "rimraf dist && babel src -d dist --ignore .test.js",
    "prod:start": "yarn prod:build && cross-env NODE_ENV=production sudo pm2 start --name www.gokaygurcan.com -i 0 dist/server && sudo pm2 logs",
    "prod:stop": "sudo pm2 stop www.gokaygurcan.com",
    "prod:delete": "sudo pm2 delete www.gokaygurcan.com",
    "test": "xo && flow && jest --coverage",
    "precommit": "yarn test"
  },
  "repository": "gokaygurcan/gokaygurcan.github.io",
  "author": {
    "name": "Gökay Gürcan",
    "email": "info@gokaygurcan.com",
    "url": "https://www.gokaygurcan.com/"
  },
  "copyright": "2017",
  "license": "MIT",
  "bugs": "https://github.com/gokaygurcan/gokaygurcan.github.io/issues",
  "keywords": [
    "personal",
    "website"
  ],
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "body-parser": "^1.17.1",
    "compression": "^1.6.2",
    "cookie-parser": "^1.4.3",
    "express": "^5.0.0-alpha.5",
    "express-session": "^1.15.1",
    "morgan": "^1.8.1",
    "node-sass-middleware": "^0.11.0",
    "pm2": "^2.4.2",
    "rimraf": "^2.6.1",
    "serve-favicon": "^2.4.1",
    "toobusy-js": "^0.5.1"
  },
  "devDependencies": {
    "babel-cli": "^6.23.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^19.0.0",
    "babel-loader": "^6.4.1",
    "babel-preset-flow": "^6.23.0",
    "babel-preset-latest": "^6.22.0",
    "cross-env": "^3.2.4",
    "eslint": "^3.17.1",
    "eslint-config-xo": "^0.17.0",
    "eslint-plugin-flowtype": "^2.30.2",
    "eslint-plugin-flowtype-errors": "^3.0.1",
    "flow-bin": "^0.41.0",
    "husky": "^0.13.2",
    "jest": "^19.0.2",
    "nodemon": "^1.11.0",
    "webpack": "^2.3.1",
    "webpack-dev-server": "^2.4.2",
    "xo": "^0.17.1"
  },
  "xo": {
    "esnext": true,
    "space": 2,
    "envs": [
      "browser",
      "jest"
    ],
    "global": [
      "expect",
      "test"
    ],
    "rules": {
      "flowtype-errors/show-errors": 2
    },
    "extends": [
      "plugin:flowtype/recommended"
    ],
    "plugins": [
      "flowtype",
      "flowtype-errors"
    ]
  }
}
